{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext",
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "out",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "vite/client"
    ],
  },
  "include": [
    "*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
}